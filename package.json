{
  "name": "tierpolitik-vorstoesse-db",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "monitor-api:start": "node api/server/monitor-api-server.mjs",
    "smoke:monitor-api": "node scripts/monitor-endpoint-smoke.mjs",
    "test:e2e": "playwright test",
    "crawler:collect": "node scripts/crawler-collect.mjs",
    "crawler:collect:v2": "node scripts/crawler-collect-v2.mjs",
    "crawler:score": "node scripts/crawler-score.mjs",
    "crawler:seed-core": "node scripts/crawler-seed-core.mjs",
    "crawler:build-review": "node scripts/build-review-view.mjs",
    "crawler:ingest-user-input": "node scripts/user-input-ingest.mjs",
    "crawler:apply-review": "node scripts/apply-review-decisions.mjs",
    "crawler:export": "node scripts/export-published-for-site.mjs",
    "crawler:build-public": "node scripts/build-crawler-public-view.mjs",
    "home:build-data": "node scripts/build-home-data-from-crawler.mjs",
    "sources:build-cantonal-registry": "node scripts/build-cantonal-source-registry.mjs",
    "check:review-regressions": "node scripts/check-review-regressions.mjs",
    "check:review-regressions:fix": "node scripts/check-review-regressions.mjs --fix-decisions",
    "check:review-regressions:prune-legacy": "node scripts/check-review-regressions.mjs --prune-legacy-decisions",
    "check:review-regressions:prune-unknown": "node scripts/check-review-regressions.mjs --prune-unknown-decisions",
    "crawler:pipeline:db": "npm run crawler:pipeline && npm run db:migrate-json && npm run db:sync-json && npm run home:build-data",
    "db:init-schema": "node scripts/init-db-schema.mjs",
    "db:migrate-json": "node scripts/migrate-json-to-db.mjs",
    "db:sync-json": "node scripts/sync-db-to-json.mjs",
    "db:refresh-site": "node scripts/db-refresh-site.mjs",
    "check:crawler-contract": "node scripts/validate-crawler-contract.mjs",
    "check:review-preflight": "node scripts/preflight-review-data.mjs",
    "crawler:pipeline": "npm run crawler:collect && npm run check:crawler-contract && npm run crawler:seed-core && npm run crawler:score && npm run check:review-preflight && npm run crawler:build-review && npm run crawler:ingest-user-input && npm run crawler:apply-review && npm run check:review-preflight && npm run crawler:build-review && npm run crawler:export"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "xlsx": "^0.18.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
